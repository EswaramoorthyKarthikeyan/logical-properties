{
  "name": "logical-properties",
	"displayName": "Logical Properties",
	"description": "Identify and replace CSS physical properties with logical properties.",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Debuggers",
		"Formatters",
		"Linters",
		"Programming Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:coffeescript",
		"onLanguage:css",
		"onLanguage:html",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:less",
		"onLanguage:markdown",
		"onLanguage:php",
		"onLanguage:plaintext",
		"onLanguage:sass",
		"onLanguage:scss",
		"onLanguage:stylus",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:vue",
		"onLanguage:vue-html",
		"onLanguage:xml",
		"onLanguage:xsl"
	],
	"contributes": {
		"commands": [
		  {
			"command": "logical-properties.replacePhysicalWithLogicalReplaceAll",
			"title": "Replace all ðŸ’ª physical properties with ðŸ§  logical properties."
		  }
		],
		"menus": {
			"editor/context": [{
				"when": "editorFocus",
				"command": "logical-properties.replacePhysicalWithLogicalReplaceAll",
				"group": "logicalProperties@1"
		  }]
		},
		"keybindings": [
			{
				"command": "logical-properties.replacePhysicalWithLogicalReplaceAll",
				"key": "ctrl+shift+l",
				"mac": "cmd+shift+l",
				"when": "editorFocus"
			}
		]
	},
	"main": "./extension.js",
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
